{
  "variables": {
    "home": "{{env `HOME`}}",
    "wifi_name": "",
    "wifi_password": "",
    "nomad": "",
    "consul": "",
    "nodearch": "linux-armv7"
  },
  "sensitive-variables": ["wifi_password"],
  "builders": [{
    "type": "arm-image",
    "iso_url" : "file:///vagrant/2018-11-13-raspbian-stretch-lite.img",
    "iso_checksum_type":"sha256",
    "iso_checksum":"b9e22d7592c6936e4b0adadc9c9dbf7b4868cbfc26ff68a329e32f4af54fed70",
    "last_partition_extra_size" : 1073741824
  }],  
  "provisioners": [
    {
      "type": "shell",
      "inline": ["touch /boot/ssh", "mkdir -m 0700 /home/pi/.ssh"]
    },
    {
      "type": "file",
      "source": "/vagrant/authorized_keys",
      "destination": "/home/pi/.ssh/authorized_keys"
    },
    {
      "type": "shell",
      "inline": ["chmod 0600 /home/pi/.ssh/authorized_keys", "chown -R pi.pi /home/pi/.ssh"]
    },
    {
      "type": "shell",
      "inline": [
        "sed '/PasswordAuthentication/d' -i /etc/ssh/ssh_config",
        "echo  >> /etc/ssh/ssh_config",
        "echo 'PasswordAuthentication no' >> /etc/ssh/ssh_config"
      ]
    },


    {
      "type": "shell",
      "inline": [
        "test -z \"{{user `wifi_password`}}\" || wpa_passphrase \"{{user `wifi_name`}}\" \"{{user `wifi_password`}}\" | sed -e 's/#.*$//' -e '/^$/d' >> /etc/wpa_supplicant/wpa_supplicant.conf"
      ]
    },

    {
      "type": "shell",
      "inline": ["echo localhost > /etc/hostname"]
    },
    {
      "type": "shell",
      "inline": ["apt-get update -y; apt-get install -y dnsutils lsof strace"]
    },

    {
      "type": "file",
      "source": "/vagrant/terraform-aws-consul",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": ["/tmp/terraform-aws-consul/modules/install-consul/install-consul --version 1.4.2 --arch linux_arm"]
    },

    {
      "type": "file",
      "source": "/vagrant/init-consul",
      "destination": "/opt/consul/"
    },
    {
      "type": "shell",
      "inline": [
        "chmod 755 /opt/consul/init-consul",
        "sed -i -e '/^exit 0$/d' /etc/rc.local",
        "test -z \"{{user `consul`}}\" || echo '/opt/consul/init-consul {{user `consul`}} &' >> /etc/rc.local"
      ]
    },

    {
      "type": "file",
      "source": "/vagrant/terraform-aws-nomad",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": ["/tmp/terraform-aws-nomad/modules/install-nomad/install-nomad --version 0.8.7 --arch linux_arm"]
    },

    {
      "type": "file",
      "source": "/vagrant/init-nomad",
      "destination": "/opt/nomad/"
    },
    {
      "type": "shell",
      "inline": [
        "chmod 755 /opt/nomad/init-nomad",
        "sed -i -e '/^exit 0$/d' /etc/rc.local",
        "test -z \"{{user `nomad`}}\" || echo '/opt/nomad/init-nomad {{user `nomad`}} &' >> /etc/rc.local"
      ]
    },

    {
      "type": "file",
      "source": "/vagrant/install-node_exporter",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "/vagrant/run-node_exporter",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": ["/tmp/install-node_exporter/install-node_exporter --version 0.17.0 --arch {{user `nodearch`}}"]
    },
    {
      "type": "shell",
      "inline": [
        "sed -i -e '/^exit 0$/d' /etc/rc.local",
        "echo /opt/prometheus/bin/run-node_exporter >> /etc/rc.local"
      ]
    }
  ]
}